{
  "manifest_version": 3,
  "name": "Mirrorfly Chat",
  "description": "The powerful chat and calls for building interactive Chrome extensions",
  "version": "0.3",
  "permissions": [
    "storage",
    "tabs",
    "https://web.mirrorfly.com/"
 ],
  "content_scripts": [{
      "matches": [
          "https://web.mirrorfly.com/"
      ],
      "js": ["content.js"]
  }],
  "action": {
      "default_icon": "logo192.png",
      "default_title": "Mirrorfly Chat"
  },
  "background": {
      "service_worker": "background.js"
  },
  "icons": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
   }
  }
 
 
 